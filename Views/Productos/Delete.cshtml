@model WebAppSalesManagement.Models.ProductoViewModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Confirmar Eliminación</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5><i class="bi bi-exclamation-triangle"></i> ¿Está seguro que desea eliminar este producto?</h5>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProductoID)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductoID)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Precio)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Precio)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Stock)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ProductoID" />
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>